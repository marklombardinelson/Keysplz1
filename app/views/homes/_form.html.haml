= form_for @home, html: { class: "form-horizontal", role: "form" } do |f|
  -if @home.errors.any?
    .alert.alert-danger.alert-dismissable{role: "alert"}
      %button.close{type: "button", data: {dismiss: "alert"} }
        %span{aria: {hidden: "true"} } &times;
        %span.sr-only Close
      %h4= "#{pluralize(@home.errors.count, "error")} prohibited this home from being saved:"

      %ul
        - @home.errors.full_messages.each do |msg|
          %li= msg

  .row
    .col-sm-6
      .form-group
        = f.label :address, class: 'col-md-3 control-label'
        .col-md-6
          = f.text_field :address, class: 'form-control'
      .col-sm-6
        .form-group
          = f.label :number_of_bedrooms, class: 'col-md-6 control-label'
          .col-md-6
            %select#select.form-control
              %option{value:"1"} 1
              %option{value:"2"} 2
              %option{value:"3"} 3
              %option{value:"4"} 4
              %option{value:"5"} 5
      .col-sm-6
        .form-group
          = f.label :number_of_baths, class: 'col-md-6 control-label'
          .col-md-6
            %select#select.form-control
              %option{value:"1"} 1
              %option{value:"2"} 2
              %option{value:"3"} 3
              %option{value:"4"} 4
              %option{value:"5"} 5
      .col-sm-6
        .form-group
          = f.label :parking, class: 'col-md-6 control-label'
          .col-md-6
            %select#select.form-control
              %option{value:"None"} None
              %option{value:"Street Parking"} Street Parking
              %option{value:"Other"} Other
      .col-sm-6
        .form-group
          = f.label :square_footage, class: 'col-md-6 control-label'
          .col-md-6
            %select#select.form-control
              %option{value:"0-1000"} 0-1000
              %option{value:"1001-3000"} 1001-3000
              %option{value:"3001-5000"} 3001-5000
              %option{value:"5000+"} 5000+
      .col-sm-6
        .form-group
          = f.label :price, class: 'col-md-6 control-label'
          .col-md-6
            = f.text_field :price, class: 'form-control'
      .col-sm-6
        .form-group
          = f.label :description, class: 'col-md-6 control-label'
          .col-md-6
            %select#select.form-control
              %option{value:"Town Home"} Town Home
              %option{value:"Mansion"} Mansion
              %option{value:"Apartment"} Apartment
              %option{value:"Condo"} Condo
    .col-sm-6
      .form-group
        = f.label :cover_image, class: 'col-md-6 control-label'
        .col-md-6
          = f.attachment_field :cover_image
  .form-group
    .col-md-offset-8.col-md-1
      = f.submit class: 'btn btn-success'
